  </head>
  <body>
  
  <header class="mb-auto">
    <!--NavBar!-->
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container-fluid">

      <a class="navbar-brand" href="/"><i class="fa-solid fa-user fa-lg"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

          <li class="nav-item">
          <% if (title == "Home Page") { %>
            <a class="nav-link active" aria-current="" href="/home">
          <% } else { %>
            <a class="nav-link" href="/home">
          <% } %>
            <i class="fa-solid fa-lg fa-house-user"></i>
            Home</a>
          </li>

            <li class="nav-item">
          <% if (title == "About me") { %>
            <a class="nav-link active" href="/about">
          <% } else { %>
           <a class="nav-link" href="/about">
          <% } %>
            <i class="fa-solid fa-lg fa-circle-question"></i>
            About me</a>
          </li>
            <li class="nav-item">
          <% if (title == "Contact me") {%>
            <a class="nav-link active" href="/contact">
          <% } else {%>
            <a class="nav-link" href="/contact">
          <% } %>
            <i class="fa-solid fa-envelope fa-lg"></i>Contact me</a>
          </li>

          <li class="nav-item">
          <% if (title == "Projects Page") {%>
          <a class="nav-link active" href="/project">
          <% } else {%>
          <a class="nav-link"   href="/project">
          <% } %>
            <i class="fa-solid fa-gears fa-lg"></i>Projects</a>
          
          </li>
        </ul>
      </div>
    </div> 
  </nav>
</header>


<main class="container">
  <div class="centered-content">
    <img src="Content/mepic.jpg" alt="Profile Image" class="profile-image">
    <h1 class="display-4">Welcome to my <%= title %></h1>
    <h1 class="display-5">by Adekunle Ezekiel</h1>
  </div>
</main>


<!--Bottom Nav Bar-->
<nav class="navbar fixed-bottom navbar-dark bg-dark">
  <h6 class="navbar-text text-center mx-auto">&copy; Copyright 2023. All rights Reserved</h6>
</nav>

<!--Script Files-->
<script src="/Scripts/app.js>"></script>
<script src="/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/jquery/dist/jquery.min.js"></script>

</div>
